{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jquery": true
  },
	"globals": {
		"Backbone": true
	},
  "extends": ["eslint:recommended", "vue"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": [2, "unix"],
    "quotes": ["error", "single", "avoid-escape"],
    "semi": ["error", "always"],
    "no-console": "off",
    "no-unused-vars": "warn"
  },
  "parserOptions": {
      "sourceType": "module"
  }
}
