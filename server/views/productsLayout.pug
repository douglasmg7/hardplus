html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Produtos
    link(rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css" charset="utf-8")
    link(rel="stylesheet" href="/css/allnations.css" charset="utf-8")

  body#products
    //- nav
    nav.navbar.navbar-default.navbar-static-top
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          //- menu
          a.navbar-brand(href="allnations") Allnations
          a.navbar-brand(href="store") Loja
        .navbar-collapse.collapse#navbar
          form.navbar-form.navbar-right
            .form-group
              input.form-control(v-model="filterName" type="text")

    //- content
    .container
      .row
        .col-xs-12
          table.table.table-condensed
            block content_tr

    //- modal
    .modal(id="prd-info" tabindex="-1" role="dialog")
      .modal-dialog(role="document")
        .modal-content
          .modal-header
            button.close(type="button" data-dismiss="modal" aria-label="Close")
              span(aria-hidden="true") &times;
            h4.modal-title {{productInfo.desc}}
          .modal-body
            block modal_body
          .modal-footer.form-inline
            block modal_footer

  script(src="/bower_components/jquery/dist/jquery.min.js")
  script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
  script(src="../js/bundle.js")
