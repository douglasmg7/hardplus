html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css" charset="utf-8")
    block head


  body#products
    nav.navbar.navbar-default.navbar-static-top
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(
            type="button"
            data-toggle="collapse"
            data-target="#navbar-collapse-main"
            aria-expanded="false"
            aria-controls="navbar"
          )
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          //- brand
          //- a.navbar-brand(href="store") Produtos
        .collapse.navbar-collapse#navbar-collapse-main
          ul.nav.navbar-nav
            //- menu
            li(v-bind:class="{active: menuIsActive.store}"): a(href="store") Hard Plus
            li(v-bind:class="{active: menuIsActive.allNations}"): a(href="allnations") All Nations
          form.navbar-form.navbar-right
            .form-group
              input.form-control(v-model="filterName" type="text")

    //- content
    .container
      .row
        .col-xs-12
          table.table.table-condensed
            block content_tr

    //- modal
    .modal(id="prd-info" tabindex="-1" role="dialog")
      .modal-dialog(role="document")
        .modal-content
          .modal-header
            button.close(type="button" data-dismiss="modal" aria-label="Close")
              span(aria-hidden="true") &times;
            block modal_header
          .modal-body
            block modal_body
          .modal-footer.form-inline
            block modal_footer

  script(src="/bower_components/jquery/dist/jquery.min.js")
  script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
  block bundle
